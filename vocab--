    {answer: "Climate activism", definition: "Hoạt động vì khí hậu"},
    {answer: "Environmental degradation", definition: "Suy thoái môi trường"}
  ];

  let currentQuestionIndex = 0;
  let score = 0;

  const questionEl = document.getElementById('question');
  const optionsList = document.getElementById('options-list');
  const nextBtn = document.getElementById('next-btn');
  const scoreBoard = document.getElementById('score-board');

  function shuffleArray(array) {
    // Fisher-Yates shuffle
    for(let i = array.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [array[i], array[j]] = [array[j], array[i]];
    }
  }

  function loadQuestion() {
    clearStatus();
    nextBtn.disabled = true;
    nextBtn.setAttribute('aria-disabled', 'true');

    const currentQuestion = questions[currentQuestionIndex];

    questionEl.textContent = `Chọn từ tiếng Anh đúng với nghĩa: "${currentQuestion.definition}"`;

    // Prepare options: correct + 3 random incorrect
    let options = [currentQuestion.answer];
    while(options.length < 4) {
      const rand = questions[Math.floor(Math.random() * questions.length)].answer;
      if(!options.includes(rand)) {
        options.push(rand);
      }
    }

    shuffleArray(options);

    optionsList.innerHTML = '';
    options.forEach(option => {
      const li = document.createElement('li');
      li.textContent = option;
      li.tabIndex = 0;
      li.setAttribute('role', 'button');
      li.setAttribute('aria-pressed', 'false');
      li.addEventListener('click', () => selectOption(li, currentQuestion.answer));
      li.addEventListener('keydown', (e) => {
        if(e.key === 'Enter' || e.key === " ") {
          e.preventDefault();
          selectOption(li, currentQuestion.answer);
        }
      });
      optionsList.appendChild(li);
    });

    // Update score board
    scoreBoard.textContent = `Điểm: ${score} / ${questions.length}`;
  }

  function clearStatus() {
    Array.from(optionsList.children).forEach(li => {
      li.classList.remove('correct', 'wrong');
      li.disabled = false;
      li.setAttribute('aria-pressed', 'false');
      li.style.pointerEvents = 'auto';
    });
  }

  function selectOption(selectedLi, correctAnswer) {
    // Disable all options after selection
    Array.from(optionsList.children).forEach(li => {
      li.style.pointerEvents = 'none';
    });

    if(selectedLi.textContent === correctAnswer) {
      selectedLi.classList.add('correct');
      score++;
    } else {
      selectedLi.classList.add('wrong');
      // highlight correct answer
      Array.from(optionsList.children).forEach(li => {
        if(li.textContent === correctAnswer) {
          li.classList.add('correct');
        }
      });
    }

    nextBtn.disabled = false;
    nextBtn.setAttribute('aria-disabled', 'false');
  }

  nextBtn.addEventListener('click', () => {
    currentQuestionIndex++;
    if(currentQuestionIndex >= questions.length) {
      showFinalScore();
    } else {
      loadQuestion();
    }
  });

  function showFinalScore() {
    questionEl.textContent = `Bạn đã hoàn thành bài quiz! Điểm số của bạn: ${score} / ${questions.length}`;
    optionsList.innerHTML = '';
    nextBtn.style.display = 'none';
    scoreBoard.textContent = '';
  }

  // Khởi tạo bài quiz
  loadQuestion();

</script>

