File sẽ chứa danh sách câu hỏi ẩn trong JavaScript (dựa trên bộ từ tôi đã có), thuật toán vị trí đúng sai đảm bảo đa dạng.

Tiếp theo tôi sẽ tạo file này.

vocabulary-quiz.html


<!DOCTYPE html>
<html lang="vi">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Vocabulary Quiz - Lựa chọn từ đúng</title>
<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
    margin: 0; padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 1em;
  }
  .container {
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    max-width: 400px;
    width: 100%;
    padding: 2em;
    box-sizing: border-box;
  }
  h1 {
    text-align: center;
    color: #333;
    margin-bottom: 1em;
  }
  #question {
    font-size: 1.3em;
    margin-bottom: 1em;
    min-height: 3em;
    color: #222;
  }
  .options {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .options li {
    background: #e0e7ff;
    margin-bottom: 0.8em;
    padding: 0.9em 1em;
    border-radius: 12px;
    cursor: pointer;
    border: 2px solid transparent;
    transition: background-color 0.3s, border-color 0.3s;
    user-select: none;
  }
  .options li:hover {
    background: #c9d7ff;
  }
  .options li.correct {
    background: #9be79b;
    border-color: #4caf50;
    color: #154906;
  }
  .options li.wrong {
    background: #ff9b9b;
    border-color: #d32f2f;
    color: #5a0b0b;
  }
  #next-btn {
    display: block;
    width: 100%;
    padding: 0.75em;
    border: none;
    background-color: #2f80ed;
    color: white;
    font-size: 1.2em;
    font-weight: bold;
    border-radius: 12px;
    cursor: pointer;
    margin-top: 1.5em;
    box-shadow: 0 5px 15px rgba(47,128,237,0.4);
    transition: background-color 0.3s ease;
  }
  #next-btn:hover:not(:disabled) {
    background-color: #135bcc;
  }
  #next-btn:disabled {
    background-color: #a1c8ff;
    cursor: default;
  }
  #score-board {
    font-size: 1.3em;
    margin-top: 1em;
    text-align: center;
    color: #444;
  }
  @media (max-width: 450px) {
    .container {
      padding: 1.3em;
      max-width: 90vw;
    }
    h1 {
      font-size: 1.5em;
    }
    #question {
      font-size: 1.15em;
    }
    .options li {
      font-size: 1.05em;
      padding: 0.8em 1em;
    }
    #next-btn {
      font-size: 1.1em;
      padding: 0.7em;
    }
  }
</style>
</head>
<body>
  <div class="container" role="main" aria-labelledby="quiz-title">
    <h1 id="quiz-title">Vocabulary Quiz</h1>
    <div id="question" aria-live="polite" aria-atomic="true">Loading question...</div>
    <ul class="options" role="list" id="options-list"></ul>
    <button id="next-btn" disabled aria-disabled="true">Tiếp theo</button>
    <div id="score-board" aria-live="polite" aria-atomic="true"></div>
  </div>

<script>
  // Danh sách các câu hỏi và đáp án (từ tiếng Anh + nghĩa tiếng Việt)
  const questions = [
    {answer: "Climate Change", definition: "Biến đổi khí hậu"},
    {answer: "Global warming", definition: "Hiện tượng nóng lên toàn cầu"},
    {answer: "Greenhouse gases", definition: "Khí nhà kính (CO2, methane)"},
    {answer: "Carbon footprint", definition: "Dấu chân carbon"},
    {answer: "Fossil fuels", definition: "Nhiên liệu hóa thạch (coal, oil)"},
    {answer: "Mitigation", definition: "Giảm thiểu (climate change mitigation)"},
    {answer: "Adaptation", definition: "Thích nghi (e.g., adaptation strategies)"},
    {answer: "Extreme weather events", definition: "Hiện tượng thời tiết cực đoan"},
    {answer: "Sea level rise", definition: "Mực nước biển dâng"},
    {answer: "Deforestation", definition: "Nạn phá rừng"},
    {answer: "Carbon emissions", definition: "Lượng khí thải carbon"},
    {answer: "Air pollution", definition: "Ô nhiễm không khí"},
    {answer: "Water contamination", definition: "Ô nhiễm nguồn nước"},
    {answer: "Plastic waste", definition: "Rác thải nhựa"},
    {answer: "Microplastics", definition: "Vi nhựa"},
    {answer: "Toxic chemicals", definition: "Hóa chất độc hại"},
    {answer: "Waste disposal", definition: "Xử lý rác thải"},
    {answer: "Landfill", definition: "Bãi rác"},
    {answer: "Recycling", definition: "Tái chế"},
    {answer: "Biodegradable", definition: "Có thể phân hủy sinh học"},
    {answer: "Sustainable packaging", definition: "Bao bì bền vững"},
    {answer: "Renewable energy", definition: "Năng lượng tái tạo (solar, wind)"},
    {answer: "Solar power", definition: "Năng lượng mặt trời"},
    {answer: "Wind turbines", definition: "Tuabin gió"},
    {answer: "Energy efficiency", definition: "Hiệu suất năng lượng"},
    {answer: "Eco-friendly", definition: "Thân thiện với môi trường"},
    {answer: "Conservation", definition: "Bảo tồn (energy/water conservation)"},
    {answer: "Sustainable development", definition: "Phát triển bền vững"},
    {answer: "Carbon-neutral", definition: "Trung hòa carbon"},
    {answer: "Green technology", definition: "Công nghệ xanh"},
    {answer: "Public transportation", definition: "Giao thông công cộng"},
    {answer: "Endangered species", definition: "Loài có nguy cơ tuyệt chủng"},
    {answer: "Habitat destruction", definition: "Phá hủy môi trường sống"},
    {answer: "Overexploitation", definition: "Khai thác quá mức"},
    {answer: "Soil erosion", definition: "Xói mòn đất"},
    {answer: "Natural reserves", definition: "Khu bảo tồn thiên nhiên"},
    {answer: "Wildlife protection", definition: "Bảo vệ động vật hoang dã"},
    {answer: "Ecosystem", definition: "Hệ sinh thái"},
    {answer: "Biodiversity loss", definition: "Suy giảm đa dạng sinh học"},
    {answer: "Overfishing", definition: "Đánh bắt cá quá mức"},
    {answer: "Environmental policies", definition: "Chính sách môi trường"},
    {answer: "Regulations", definition: "Quy định (e.g., strict regulations on emissions)"},
    {answer: "Subsidies", definition: "Trợ cấp (for renewable energy)"},
    {answer: "Tax incentives", definition: "Ưu đãi thuế"},
    {answer: "Awareness campaigns", definition: "Chiến dịch nâng cao nhận thức"},
    {answer: "Individual responsibility", definition: "Trách nhiệm cá nhân"},
    {answer: "Reduce, reuse, recycle", definition: "Giảm thiểu, tái sử dụng, tái chế"},
    {answer: "Sustainable lifestyle", definition: "Lối sống bền vững"},
    {answer: "Climate activism", definition: "Hoạt động vì khí hậu"},
    {answer: "Environmental degradation", definition: "Suy thoái môi trường"}
  ];

  let currentQuestionIndex = 0;
  let score = 0;

  const questionEl = document.getElementById('question');
  const optionsList = document.getElementById('options-list');
  const nextBtn = document.getElementById('next-btn');
  const scoreBoard = document.getElementById('score-board');

  function shuffleArray(array) {
    // Fisher-Yates shuffle
    for(let i = array.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [array[i], array[j]] = [array[j], array[i]];
    }
  }

  function loadQuestion() {
    clearStatus();
    nextBtn.disabled = true;
    nextBtn.setAttribute('aria-disabled', 'true');

    const currentQuestion = questions[currentQuestionIndex];

    questionEl.textContent = `Chọn từ tiếng Anh đúng với nghĩa: "${currentQuestion.definition}"`;

    // Prepare options: correct + 3 random incorrect
    let options = [currentQuestion.answer];
    while(options.length < 4) {
      const rand = questions[Math.floor(Math.random() * questions.length)].answer;
      if(!options.includes(rand)) {
        options.push(rand);
      }
    }

    shuffleArray(options);

    optionsList.innerHTML = '';
    options.forEach(option => {
      const li = document.createElement('li');
      li.textContent = option;
      li.tabIndex = 0;
      li.setAttribute('role', 'button');
      li.setAttribute('aria-pressed', 'false');
      li.addEventListener('click', () => selectOption(li, currentQuestion.answer));
      li.addEventListener('keydown', (e) => {
        if(e.key === 'Enter' || e.key === " ") {
          e.preventDefault();
          selectOption(li, currentQuestion.answer);
        }
      });
      optionsList.appendChild(li);
    });

    // Update score board
    scoreBoard.textContent = `Điểm: ${score} / ${questions.length}`;
  }

  function clearStatus() {
    Array.from(optionsList.children).forEach(li => {
      li.classList.remove('correct', 'wrong');
      li.disabled = false;
      li.setAttribute('aria-pressed', 'false');
    });
  }

  function selectOption(selectedLi, correctAnswer) {
    // Disable all options after selection
    Array.from(optionsList.children).forEach(li => {
      li.removeEventListener('click', selectOption);
      li.setAttribute('aria-pressed', 'false');
      li.style.pointerEvents = 'none';
    });

    if(selectedLi.textContent === correctAnswer) {
      selectedLi.classList.add('correct');
      score++;
    } else {
      selectedLi.classList.add('wrong');
      // highlight correct answer
      Array.from(optionsList.children).forEach(li => {
        if(li.textContent === correctAnswer) {
          li.classList.add('correct');
        }
      });
    }

    nextBtn.disabled = false;
    nextBtn.setAttribute('aria-disabled', 'false');
  }

  nextBtn.addEventListener('click', () => {
    currentQuestionIndex++;
    if(currentQuestionIndex >= questions.length) {
      showFinalScore();
    } else {
      loadQuestion();
    }
  });

  function showFinalScore() {
    questionEl.textContent = `Bạn đã hoàn thành bài quiz! Điểm số của bạn: ${score} / ${questions.length}`;
    optionsList.innerHTML = '';
    nextBtn.style.display = 'none';
    scoreBoard.textContent = '';
  }

  // Khởi tạo bài quiz
  loadQuestion();

</script>

</body>
</html>


